      color: #555;
    }

    .media-section {
      padding: 3rem 2rem;
      max-width: 1200px;
      margin: auto;
    }

    .media-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: #09357b;
    }

    .carousel-wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
      overflow: hidden;
    }

    .carousel {
      display: flex;
      gap: 2rem;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding: 1rem 0;

      /* Cacher la scrollbar */
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none;  /* IE/Edge */
    }

    .carousel::-webkit-scrollbar {
      display: none; /* Chrome, Safari */
    }


    .video-card {
      flex: 0 0 360px;
      background: white;
      border-radius: 12px;
      padding: 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      text-align: center;
    }

    .video-card iframe {
      width: 100%;
      height: 215px;
      border-radius: 8px;
      border: none;
      margin-bottom: 0.5rem;
    }

    .nav {
      background: var(--accent-green);
      color: white;
      border: none;
      font-size: 2rem;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      cursor: pointer;
    }

    .nav:hover {
      background: var(--accent-green-hover);
    }

    .youtube-account {
      margin-top: 2rem;
      text-align: center;
      font-size: 1.05rem;
    }

    .youtube-account a {
      color: var(--accent-green);
      font-weight: 600;
    }

    .press-list {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .press-article {
      background: #fff;
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    }

    .press-article h3 {
      margin: 0;
      font-size: 1.1rem;
      color: #004080;
    }

    .press-article p {
      margin-top: 0.5rem;
      color: #555;
    }

    .press-article a {
      text-decoration: none;
      color: inherit;
    }

    @media (max-width: 768px) {
      .carousel-wrapper .nav {
        display: none;
      }

      .video-card {
        flex: 0 0 280px;
      }

      .video-card iframe {
        height: 180px;
      }

      .nav {
        background: var(--accent-green);
        color: white;
        border: none;
        font-size: 2rem;
        border-radius: 50%;
        width: 42px;
        height: 42px;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
        transition: background 0.2s ease, transform 0.2s ease;
      }

      .nav:hover {
        background: var(--accent-green-hover);
        transform: scale(1.1);
      }

      .nav:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }


    }
  </style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.getElementById('video-carousel');
    if (!carousel) return;

    const leftBtn = document.querySelector('.nav.left');
    const rightBtn = document.querySelector('.nav.right');

    const scrollAmount = 400;

    function updateNavButtons() {
      const scrollLeft = carousel.scrollLeft;
      const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;

      leftBtn.style.visibility = scrollLeft > 0 ? 'visible' : 'hidden';
      rightBtn.style.visibility = scrollLeft < maxScrollLeft ? 'visible' : 'hidden';
    }

    leftBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    rightBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });

    carousel.addEventListener('scroll', updateNavButtons);
    window.addEventListener('resize', updateNavButtons);

    updateNavButtons();
  });
</script>


