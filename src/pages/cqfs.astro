---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const baseUrl = import.meta.env.SITE || 'https://ton-domaine.com/cqfs';
const articles = await getCollection('cqfs');
const iaArticles = articles.filter(a => a.data.rubrique === 'IA');
const politiqueArticles = articles.filter(a => a.data.rubrique === 'Politique');
---

<BaseLayout title="CQFS â€“ Dr Sambo Kalifa Sankara">
  <section class="cqfs-section">
    <h1>Ce Quâ€™il Faut Savoir</h1>

    <div class="toggle-buttons">
      <button id="iaBtn" class="active">IA & Technologie</button>
      <button id="politiqueBtn">Politique & SÃ©curitÃ©</button>
    </div>

    <!-- IA -->
    <div id="ia" class="cqfs-list">
      <ul>
        {iaArticles.map(({ data, slug }) => (
          <li class="cqfs-item" id={slug}>
            <h3>{data.title}</h3>
            <p>{data.description}</p>
            <div class="share-section">
              <span class="share-label">ðŸ”— Partager cette page :</span>
              <div class="share-buttons">
                <a class="btn-share fb" href="https://www.facebook.com/sharer/sharer.php?u=https://sambokalifasankara.com/cqfs" target="_blank" rel="noopener">ðŸ“˜ Facebook</a>
