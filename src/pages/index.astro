---
import BaseLayout from '../layouts/BaseLayout.astro';
import { withBase } from '../utils/path';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const actus = await getCollection('actus');
---

<BaseLayout title="Accueil – Dr Sambo Kalifa Sankara">
  <section class="banner">
    <div class="banner-content">
      <div class="text">
        <h1>Dr Sambo Kalifa Sankara</h1>
        <p>Retrouvez ici toute mon actualité en exclusivité</p>
      </div>
    </div>
  </section>

  <section class="main-grid">
    <aside class="left-column">
      <div class="login-card">
        <h3>Me retrouver sur les réseaux</h3>
        <p>Rejoignez-moi sur LinkedIn, Facebook, X et YouTube pour découvrir mes projets, conférences et réflexions autour de l’IA et l’agriculture durable.</p>
        <a href="https://fr.linkedin.com/in/dr-sambo-kalifa-sankara-10767283" class="btn linkedin" target="_blank" rel="noopener noreferrer">Voir LinkedIn</a>
        <a href="https://www.facebook.com/SamboKalifaSankara/" class="btn facebook" target="_blank" rel="noopener noreferrer">Voir Facebook</a>
        <a href="https://x.com/KalifaSamb55036" class="btn x" target="_blank" rel="noopener noreferrer">Voir X</a>
        <a href="https://www.youtube.com/@sambokalifasankara7893" class="btn youtube" target="_blank" rel="noopener noreferrer">Voir YouTube</a>
      </div>
    </aside>

    <main class="content-column">
      {actus.map((actu: CollectionEntry<'actus'>) => (
        <article class="news-card">
          <div class="news-author">
            <img src={withBase('images/pp_kalifa_1.PNG')} alt="Dr Sambo Kalifa Sankara" />
            <div>
              <strong>Dr Sambo Kalifa Sankara</strong> · <span>{actu.data.date}</span>
            </div>
          </div>
          {actu.data.image && (
            <img class="actu-image" src={withBase(actu.data.image)} alt={actu.data.titre} />
          )}
          <h3>{actu.data.titre}</h3>
          {/* <p>{actu.data.resume}</p> */}
          <div class="news-content">
            <p class="summary collapsed">{actu.data.resume}</p>
            <button class="toggle-btn" onclick="toggleContent(this)">Voir plus</button>
          </div>
        </article>
      ))}
    </main>

    <aside class="right-column">
      <div class="sponsor-card">
        <h4>À la une</h4>
        <img src={withBase('images/agria_1.PNG')} alt="Sponsorisé" />
        <p>L'intelligence artificielle au service des agriculteurs burkinabe</p>
        <a class="btn gold" href="#">Découvrir</a>
      </div>
    </aside>
  </section>

  <style>
    :root {
      --bg-light: #f0f2f5;
      --text-dark: #1c1e21;
      --blue: #1877f2;
      --linkedin: #0077b5;
      --gold: #f5c518;
      --x-color: #000000d2;
      --youtube-color: #FF0000;
    }

    body {
      background: var(--bg-light);
      color: var(--text-dark);
      font-family: 'Inter', sans-serif;
    }

    .banner {
      width: 100%;
      padding: 3rem 0;
      background: url('/images/pp_kalifa_2.PNG') no-repeat center center;
      background-size: cover;
      color: white;
      box-sizing: border-box;
      position: relative;
    }

    .banner::before {
      content: "";
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0, 0, 0, 0.45);
      z-index: 1;
    }

    .banner-content {
      max-width: 1000px;
      min-height: 300px;
      margin: 0 auto;
      padding: 4rem 2rem;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      position: relative;
      text-align: right;
      z-index: 2;
    }

    .banner-content .text {
      flex: 1;
      max-width: 600px;
      color: #ffffff;
    }

    .banner-content .text h1 {
      font-size: 3rem;
      margin-bottom: 0.5rem;
      color: #ffffff;
    }

    .banner-content .text p {
      font-size: 1.6rem;
      color: #e0e0e0;
    }

    .main-grid {
      display: grid;
      grid-template-columns: 280px 1fr 280px;
      gap: 2rem;
      padding: 2rem;
      max-width: 1400px;
      margin: auto;
      background: var(--bg-light);
    }

    /* .left-column,
    .right-column {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    } */

    /* .left-column,
    .right-column {
      position: sticky;
      top: 2rem; 
      align-self: start;
    } */

    /* .left-column,
    .right-column {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      position: sticky;
      top: 2rem;
      align-self: start;
    } */

    .left-column,
    .right-column {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .login-card,
    .sponsor-card,
    .news-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .btn {
      display: block;
      margin-top: 1rem;
      padding: 0.7rem;
      border-radius: 8px;
      font-weight: bold;
      text-align: center;
      text-decoration: none;
      color: white;
    }

    .btn.linkedin {
      background: var(--linkedin);
    }

    .btn.facebook {
      background: var(--blue);
    }

    .btn.x {
      background: var(--x-color);
    }

    .btn.youtube {
      background: var(--youtube-color);
    }

    .btn.gold {
      background: var(--gold);
      color: black;
      margin-top: 1rem;
    }

    .confidentialite {
      font-size: 0.85rem;
      margin-top: 1rem;
    }

    .confidentialite a {
      color: var(--blue);
    }

    .news-card img {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      object-fit: cover;
    }

    .news-card .actu-image {
      width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 1rem 0;
      object-fit: cover;
    }

    .news-author {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1rem;
    }

    .news-card h3 {
      margin-top: 0;
    }

    .news-card p {
      color: #444;
    }

    .sponsor-card img {
      width: 100%;
      border-radius: 8px;
      margin: 1rem 0;
    }

    @media (max-width: 1024px) {
      .main-grid {
        grid-template-columns: 1fr;
      }

      .left-column,
      .right-column {
        flex-direction: row;
        justify-content: space-between;
      }

      .banner-content {
        flex-direction: column;
        text-align: center;
      }
    }

    @media (min-width: 1025px) {
      .left-column .login-card {
        position: sticky;
        top: 2rem;
      }

      .right-column .sponsor-card {
        position: sticky;
        top: 2rem;
      }
    }

    .news-content {
      position: relative;
    }

    .summary {
      max-height: 6.5em; /* ≈ 4 lignes */
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .summary.expanded {
      max-height: 1000px; /* suffisamment grand pour montrer tout le texte */
    }

    .toggle-btn {
      background: none;
      border: none;
      color: var(--blue);
      cursor: pointer;
      padding: 0.5rem 0;
      font-weight: bold;
      text-align: left;
    }



  </style>
      <script is:inline>
        function toggleContent(button) {
          const summary = button.previousElementSibling;
          const isExpanded = summary.classList.toggle('expanded');
          button.textContent = isExpanded ? 'Voir moins' : 'Voir plus';
        }
      </script>
</BaseLayout>
