---
const { title = "Dr Sambo Kalifa Sankara" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Orbitron:wght@600&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg-main: #dce3ea;
        --bg-alt: #f1f4f7;
        --text-main: #1a1a1a;
        --accent-green: #0a806f;
        --accent-green-light: #89f2c2;
        --accent-green-hover: #17c8a3;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        min-height: 100%;
        background: linear-gradient(135deg, var(--bg-main), var(--bg-alt));
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
      }

      .wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background: linear-gradient(90deg, #243b55, #141e30);
        color: white;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--accent-green);
        position: relative;
        z-index: 10;
      }

      .brand {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.2rem;
        font-weight: 600;
        background: linear-gradient(90deg, var(--accent-green), var(--accent-green-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      nav.desktop-nav {
        display: flex;
        gap: 1.5rem;
      }
      nav.desktop-nav a {
        position: relative;
        text-decoration: none;
        color: var(--accent-green);
        font-weight: 600;
      }
      nav.desktop-nav a::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        left: 0;
        bottom: -4px;
        background: var(--accent-green);
        transition: width 0.3s ease;
      }
      nav.desktop-nav a:hover::after {
        width: 100%;
      }

      .burger {
        display: none;
        background: none;
        border: none;
        font-size: 2rem;
        color: var(--text-main);
        cursor: pointer;
      }

      .mobile-nav {
        display: none;
        flex-direction: column;
        background-color: var(--bg-alt);
        border-top: 1px solid var(--accent-green);
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        z-index: 9;
      }
      .mobile-nav.open {
        display: flex;
      }
      .mobile-nav a {
        padding: 1rem 2rem;
        text-decoration: none;
        color: var(--accent-green);
        border-bottom: 1px solid #c3ccd5;
      }

      main {
        flex-grow: 1;
      }

      footer {
        background: linear-gradient(135deg, #e5ecf2, #f8fbfd);
        padding: 2rem 1rem;
        margin-top: auto;
        width: 100%;
        box-sizing: border-box;
      }
      .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }
      .footer-content p {
        margin: 0;
        color: #555;
        font-size: 0.9rem;
      }
      .btn-cv {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #4e655bc2;
        color: white;
        text-decoration: none;
        font-weight: 600;
        border-radius: 8px;
        transition: background 0.3s ease, transform 0.2s ease;
      }
      .btn-cv:hover {
        background: var(--accent-green-hover);
        transform: translateY(-2px);
      }

      @media (max-width: 768px) {
        nav.desktop-nav {
          display: none;
        }
        .burger {
          display: block;
        }
      }

      @media (max-width: 480px) {
        .footer-content {
          flex-direction: column;
          text-align: center;
        }
      }
    </style>
  </head>

  <body>
    <div class="wrapper">
      <header>
        <div class="brand">Dr Sambo Kalifa Sankara</div>
        <nav class="desktop-nav">
          <a href="/">Accueil</a>
          <a href="/presentation">Biographie</a>
          <a href="/projets">Parcours</a>
          <a href="/expertises">Expertises</a>
          <a href="/conferences">Conférences</a>
          <a href="/interventions">TV & Presse</a>
          <a href="/contact">Contact</a>
        </nav>
        <button
          class="burger"
          onclick="document.getElementById('mobile-nav').classList.toggle('open')"
        >
          ☰
        </button>
        <nav class="mobile-nav" id="mobile-nav">
          <a href="/">Accueil</a>
          <a href="/presentation">Biographie</a>
          <a href="/projets">Parcours</a>
          <a href="/expertises">Expertises</a>
          <a href="/conferences">Conférences</a>
          <a href="/interventions">TV & Presse</a>
          <a href="/contact">Contact</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-content">
          <p>© {new Date().getFullYear()} Dr Sambo Kalifa Sankara</p>
          <a
            href="/cv/bio_kalifa.pdf"
            class="btn-cv"
            target="_blank"
            rel="noopener"
          >
            Télécharger ma biographie (disponible en pièce jointe)
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>
